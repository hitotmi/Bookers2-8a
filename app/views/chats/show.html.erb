<div class="container">
  <div class="chat-topbar">
    <h2><%= @user.name %> さんとのチャット</h2>
  </div>
    <table class="chat-message">
      <thead>
        <tr>
          <th style="text-align: left; font-size: 20px;"><%= @user.name %></th>
          <th></th>
          <th style="text-align: right; font-size: 20px;">あなた</th>
        </tr>
      </thead>
      <tbody>
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
            <tr>
              <td></td>
              <td></td>
              <td><p style="text-align: right;"><%= chat.message %></p></td>
            </tr>
          <% else %>
            <tr>
              <td><p style="text-align: left;"><%= chat.message %></p></td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <div class="chat-form">
    <%= form_with model: @chat do |f| %>
      <div class="errors">
        <%= render "layouts/errors", obj: f.object %>
      </div>
      <%= f.text_field :message, placeholder: "メッセージを入力してください", autocomplete: "off" %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <%= f.submit "送信" %>
    <% end %>
  </div>
</div>